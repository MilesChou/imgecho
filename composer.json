{
    "name": "mileschou/imgecho",
    "description": "Inline Images Protocol implementation for PHP.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "MilesChou",
            "email": "jangconan@gmail.com",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^7.1 | ^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5 | ^8.5 | ^9.3",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "MilesChou\\ImgEcho\\": "src/ImgEcho"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
